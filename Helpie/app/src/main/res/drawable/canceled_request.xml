<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

    <corners android:radius="4dp"/> // if you want clear round shape then make radius size is half of your  button`s height.
    <solid android:color="#ff4242"/> // Button Colour
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    </shape>
</item>
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <corners android:radius="4dp"/> // if you want clear round shape then make radius size is half of your  button`s height.
        <solid android:color="#ffffff"/> // Button Colour
        <padding
            android:bottom="5dp"
            android:left="10dp"
            android:right="10dp"
            android:top="5dp" />
    </shape>
</item>
</layer-list>